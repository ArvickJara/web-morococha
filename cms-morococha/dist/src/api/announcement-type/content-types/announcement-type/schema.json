{
    "kind": "collectionType",
    "collectionName": "announcement_types",
    "info": {
        "singularName": "announcement-type",
        "pluralName": "announcement-types",
        "displayName": "announcement_type"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "text"
        },
        "is_active": {
            "type": "boolean",
            "default": true
        },
        "announcements": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::announcement.announcement",
            "mappedBy": "type"
        }
    }
}
